<%- include('includes/header') %>

<div class="main container py-md-5 container--narrow">

  <%- include('includes/flash') %>

  <%- include('includes/profileShared') %>

  <div class="list-group">
    <% if(followers.length == 0) { %>
      <p class="list-group-item text-muted">No followers yet.</p>
    <% } else { %>
    <% followers.forEach(function(follower) { %>
      <a href="/profile/<%= follower.username %>" class="list-group-item list-group-item-action">
        <img class="avatar-tiny" src="<%= follower.avatar %>>">
        <%= follower.username %>
      </a>
  <%  }) %>
  <% } %>  
  </div>
</div>

<%- include('includes/footer') %>